<div class="overflow-y-auto grid grid-cols-[1fr_5fr_0.25fr] gap-8 mt-4 border-b border-gray-300 pb-4">
  <div>
    <% if @listing.images.attached? %>
      <%= image_tag @listing.images.first, alt: @listing.title, class: "w-64 aspect-[3/4] object-cover rounded-xl" %>
    <% else %>
      <div class="w-36 aspect-[3/4] bg-gray-100 border flex items-center justify-center text-gray-400 text-xs rounded-xl">
        No Image
      </div>
    <% end %>
  </div>
  <div class="py-2 flex flex-col justify-between">
    <div>
      <h3 class="text-lg font-semibold"><%= link_to @listing.title, listing_path(@listing) %></h3>
      <p class="text-gray-600"><%= @listing.authors %></p>
      <p class="text-gray-600">Published on: <%= @listing.created_at.strftime("%B %d, %Y") %></p>
      <p class="text-gray-600"><%= User.find(@listing.user_id).name %></p>
      <p class="text-gray-800 font-bold"><%= number_to_currency(@listing.price) %></p>
    </div>
    <div class="flex flex-row gap-4 text-gray-500 text-sm">
      <% if @listing.course_number.present? %>
        <p><%= @listing.course_number %></p>
      <% end %>
      <% if @listing.edition.present? %>
        <p><%= @listing.edition %></p>
      <% end %>
      <% if @listing.isbn.present? %>
        <p># <%= @listing.isbn %></p>
      <% end %>
      <% if @listing.listing_type.present? %>
        <p><%= @listing.listing_type %></p>
      <% end %>
    </div>
  </div>
  <div class="flex flex-col justify-start items-end gap-2 pt-2">
    <% case @mode.to_sym %>
    <% when :editable %>
      <%= link_to "Edit", edit_my_listing_path(@listing), class: "bg-blue-100 w-20 p-2 rounded-lg text-center hover:bg-blue-200 hover:cursor-pointer transition duration-300 ease-in-out font-semibold text-blue-500" %>
      <%= button_to "Delete", my_listing_path(@listing), method: :delete, data: { confirm: 'Are you sure?' }, class: "bg-red-100 w-20 p-2 rounded-lg text-center hover:bg-red-200 hover:cursor-pointer transition duration-300 ease-in-out font-semibold text-red-500" %>
    <% when :saved %>
      <% if @saved_item %>
        <%= button_to listing_saved_item_path(listing_id: @listing.id, id: @saved_item.id), method: :delete, class: "bg-transparent" do %>
          <svg fill="#2563EB" width="20px" height="20px" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M18,2H6A2,2,0,0,0,4,4V21a1,1,0,0,0,.5.86,1,1,0,0,0,1,0L12,18.15l6.5,3.72A1,1,0,0,0,19,22a.9.9,0,0,0,.5-.14A1,1,0,0,0,20,21V4A2,2,0,0,0,18,2Z" style="fill: #2563EB;"></path>
          </svg>
        <% end %>
      <% else %>
        <%= button_to listing_saved_items_path(listing_id: @listing.id), method: :post, class: "bg-transparent" do %>
          <svg fill="none" stroke="#000000" stroke-width="1.5" width="20px" height="20px" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M18,2H6A2,2,0,0,0,4,4V21a1,1,0,0,0,.5.86,1,1,0,0,0,1,0L12,18.15l6.5,3.72A1,1,0,0,0,19,22a.9.9,0,0,0,.5-.14A1,1,0,0,0,20,21V4A2,2,0,0,0,18,2Z" style="stroke: #000000;"></path>
          </svg>
        <% end %>
      <% end %>
    <% when :transaction %>
      <% if @transaction %>
        <% owner = @current_user && @current_user.id == @listing.user_id %>
        <div class="text-xs font-medium <%= @transaction.status == 'completed' ? 'text-green-600' : @transaction.status == 'in_progress' ? 'text-amber-600' : @transaction.status == 'cancelled' ? 'text-red-600' : 'text-gray-500' %>">
          <%= @transaction.status.humanize %>
        </div>
        <div class="flex flex-col gap-2 items-end">
          <%= link_to 'View', listing_path(@listing), class: 'bg-blue-100 w-24 p-2 rounded-lg text-center text-blue-600 text-sm font-medium hover:bg-blue-200 transition' %>
          <% if owner %>
            <%= link_to 'Manage', transaction_path(@transaction), class: 'bg-green-100 w-24 p-2 rounded-lg text-center text-green-600 text-sm font-medium hover:bg-green-200 transition' %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
