<h2>My Transactions</h2>
<% @transactions.each do |t| %>
  <div class="my-4 p-3 border rounded">
    <div><strong><%= t.listing.title %></strong> — <%= t.status.humanize %></div>
    <div><%= t.start_date %> → <%= t.end_date %></div>
    <%= link_to "View", transaction_path(t), class: "underline" %>
  </div>
<% end %>
