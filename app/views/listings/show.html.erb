<div class="flex flex-col items-center">
  <div class="absolute top-5 left-5 font-bold text-2xl">Book<span class="text-blue-500">Bridge</span></div>
  <div class="mt-15 flex flex-row gap-8 justify-center w-[80%]">
    <div class="w-1/3">
      <%= image_tag @listing.images.first, alt: @listing.title, class: "w-full rounded-lg" %>
      <div class="mt-4 flex gap-2">
        <% @listing.images.each do |image| %>
          <%= image_tag image, alt: @listing.title, class: "w-16 h-16 rounded-lg object-cover cursor-pointer" %>
        <% end %>
      </div>
    </div>
    <div class="w-2/3">
      <h1 class="text-3xl font-bold"><%= @listing.title %></h1>
      <p class="text-lg text-gray-600"><%= @listing.authors %></p>
      <div class="flex items-center gap-4 mt-2">
        <p class="text-gray-600"><%= @listing.created_at.strftime("%d %B, %Y") %></p>
        <p class="text-gray-600"><%= @listing.course_number %></p>
        <p class="text-gray-600">#<%= @listing.isbn %></p>
        <p class="text-gray-600"><%= @listing.listing_type %></p>
      </div>
      <div class="mt-4">
        <p class="text-gray-600 mt-2"><%= @listing.description %></p>
      </div>
    </div>
  </div>
</div>