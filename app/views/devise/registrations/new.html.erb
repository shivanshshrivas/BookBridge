<div class="flex flex-row items-center ml-30 mr-10 p-20 h-screen ">
  <div class="absolute top-5 left-5 font-bold text-2xl">Book<span class="text-blue-500">Bridge</span></div>
  <div class="flex flex-col w-full items-center">
    <div class="text-center mb-6">
      <h2 class="text-2xl font-semibold">Welcome</h2>
      <p class="text-sm text-gray-600">Create an account to get started</p>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="mb-4">
        <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "John Doe", class: "mt-1 input bg-transparent w-full border border-gray-400 rounded-lg" %>
      </div>
      <div class="mb-4">
        <%= f.label :email, "University email address", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "johndoe@university.edu", class: "mt-1 input bg-transparent w-full border border-gray-400 rounded-lg" %>
      </div>
      <div class="mb-4">
        <%= f.label :password, class: "text-sm font-medium text-gray-700" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "mt-1 input bg-transparent w-full border border-gray-400 rounded-lg" %>
      </div>
      <div class="mb-6">
        <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Re-type password", class: "mt-1 input bg-transparent w-full border border-gray-400 rounded-lg" %>
      </div>
      <div class="actions">
        <%= f.submit "Sign up", class: "w-full p-2 bg-red-500 text-white font-semibold rounded-lg hover:bg-red-600 hover:cursor-pointer transition duration-300 ease-in-out" %>
      </div>
    <% end %>
    <div class="text-center mt-4">
      <p class="text-sm text-gray-600">Already have an account? <%= link_to "Login", new_session_path(resource_name), class: "font-bold" %></p>
    </div>
  </div>
  <div class=" ml-40">
    <h1 class="text-8xl font-bold text-black leading-tight">
      A book lying idle on a shelf is wasted ammunition.
    </h1>
  </div>
  <div>
    <div class="absolute top-0 right-50 transform rotate-135 bg-[#FFEAEB] w-150 h-36 rounded-full mix-blend-multiply"></div>
    <div class="absolute top-0 right-50 transform rotate-135 bg-red-600 w-150 h-36 rounded-full mix-blend-screen"></div>
    <div class=" absolute top-40 -right-10 transform rotate-135 bg-[#FFEAEB] w-220 h-36 rounded-full mix-blend-multiply"></div>
    <div class="absolute top-40 -right-10 transform rotate-135 bg-red-600 w-220 h-36 rounded-full mix-blend-screen"></div>
    <div class="absolute top-20 -right-75 transform rotate-135 bg-[#FFEAEB] w-180 h-36 rounded-full mix-blend-multiply"></div>
    <div class="absolute top-20 -right-75 transform rotate-135 bg-red-600 w-180 h-36 rounded-full mix-blend-screen"></div>
    <div class="absolute top-60 -right-120 transform rotate-135 bg-[#FFEAEB] w-220 h-36 rounded-full mix-blend-multiply"></div>
    <div class="absolute top-60 -right-120 transform rotate-135 bg-red-600 w-220 h-36 rounded-full mix-blend-screen"></div>
  </div>
</div>